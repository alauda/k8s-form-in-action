{
  "extends": "@1stg/tsconfig/angular",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "ng-resource-form-util": [
        "./projects/ng-resource-form-util/src/public-api"
      ],
      "ng-resource-form-util/*": ["./projects/ng-resource-form-util/src/lib/*"]
    }
  },
  // Extending `angularCompilerOptions` from `tsconfig` is not working for now
  // it wil be supported in ng 12.0, see https://github.com/angular/angular/issues/36715
  // TODO: remove it after upgrading to ng 12.0
  "angularCompilerOptions": {
    "disableTypeScriptVersionCheck": true,
    "enableIvy": false,
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true,
    "strictTemplates": true,
    "trace": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "exclude": ["node_modules", "docs", "release"]
}
