{
  "name": "k8s-form-in-action",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "run-p build:*",
    "build:demo": "ng build --configuration production",
    "build:lib": "ng-packagr -p packages/ng-resource-form-util",
    "debug": "ng-packagr -p packages/ng-resource-form-util/ng-package.debug.json",
    "dev": "yarn start",
    "lint": "run-p lint:*",
    "lint:es": "eslint . --cache --max-warnings 10",
    "lint:style": "stylelint . --cache",
    "lint:ts": "tsc --noEmit",
    "prepare": "simple-git-hooks && yarn-deduplicate --strategy fewer || exit 0",
    "prerelease": "yarn build:lib",
    "release": "changeset publish",
    "serve": "serve docs/demo -p 4200",
    "start": "ng serve --hmr",
    "test": "ng test",
    "test:watch": "WATCH=true ng test"
  },
  "devDependencies": {
    "@1stg/app-config": "^3.5.0",
    "@angular-builders/custom-webpack": "^13.1.0",
    "@angular-devkit/build-angular": "^13.3.2",
    "@angular/animations": "^13.3.2",
    "@angular/cli": "^13.3.2",
    "@angular/common": "^13.3.2",
    "@angular/compiler": "^13.3.2",
    "@angular/compiler-cli": "^13.3.2",
    "@angular/core": "^13.3.2",
    "@angular/forms": "^13.3.2",
    "@angular/language-service": "^13.3.2",
    "@angular/platform-browser": "^13.3.2",
    "@angular/platform-browser-dynamic": "^13.3.2",
    "@changesets/changelog-github": "^0.4.4",
    "@changesets/cli": "^2.22.0",
    "@types/jasmine": "^4.0.2",
    "@types/jasminewd2": "^2.0.10",
    "@types/js-yaml": "^4.0.5",
    "@types/lodash-es": "^4.17.6",
    "@types/markdown-it": "^12.2.3",
    "@types/node": "^17.0.23",
    "@types/webpack-env": "^1.16.3",
    "jasmine-core": "^4.0.1",
    "jasmine-spec-reporter": "^7.0.0",
    "js-yaml": "^4.1.0",
    "karma": "^6.3.17",
    "karma-chrome-launcher": "^3.1.1",
    "karma-coverage-istanbul-reporter": "^3.0.3",
    "karma-jasmine": "^4.0.2",
    "karma-jasmine-html-reporter": "^1.7.0",
    "lodash-es": "^4.17.21",
    "markdown-it": "^12.3.2",
    "monaco-editor": "^0.30.1",
    "monaco-editor-webpack-plugin": "^6.0.0",
    "monaco-yaml": "^4.0.0-alpha.2",
    "ng-monaco-editor": "^5.0.0",
    "ng-packagr": "^13.3.0",
    "patch-package": "^6.4.7",
    "rxjs": "^7.5.5",
    "serve": "^13.0.2",
    "ts-node": "^10.7.0",
    "tslib": "^2.3.1",
    "zone.js": "^0.11.5"
  },
  "resolutions": {
    "prettier": "^2.6.2"
  },
  "browserslist": "extends @1stg/browserslist-config/modern",
  "commitlint": {
    "extends": [
      "@1stg"
    ]
  },
  "eslintConfig": {
    "extends": "@1stg/eslint-config/loose",
    "rules": {
      "jest/no-export": 0
    }
  },
  "eslintIgnore": [
    "docs/demo",
    "node_modules",
    "release",
    "CHANGELOG.md",
    "/!.*.js"
  ],
  "prettier": "@1stg/prettier-config/semi/angular",
  "renovate": {
    "extends": [
      "@1stg"
    ]
  },
  "stylelint": {
    "extends": "@1stg/stylelint-config/loose",
    "rules": {
      "selector-type-no-unknown": [
        true,
        {
          "ignoreTypes": [
            "/^(ng|x)-/"
          ]
        }
      ]
    }
  }
}
