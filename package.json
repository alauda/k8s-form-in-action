{
  "name": "k8s-form-in-action",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "yarn build:lib && yarn build:demo",
    "build:demo": "ng build --prod --base-href /k8s-form-in-action/demo/ --deploy-url /k8s-form-in-action/demo/",
    "build:lib": "ng build ng-resource-form-util",
    "prepublish-": "rm -rf demo && rm -rf dist && yarn build && cp -r dist/k8s-form-in-action demo",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~7.0.0",
    "@angular/common": "~7.0.0",
    "@angular/compiler": "~7.0.0",
    "@angular/core": "~7.0.0",
    "@angular/forms": "~7.0.0",
    "@angular/http": "~7.0.0",
    "@angular/platform-browser": "~7.0.0",
    "@angular/platform-browser-dynamic": "~7.0.0",
    "@angular/router": "~7.0.0",
    "core-js": "^2.5.4",
    "lodash": "^4.17.11",
    "ng-monaco-editor": "^1.1.0",
    "rxjs": "~6.3.3",
    "zone.js": "~0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.10.0",
    "@angular-devkit/build-ng-packagr": "~0.10.0",
    "@angular/cli": "~7.0.4",
    "@angular/compiler-cli": "~7.0.0",
    "@angular/language-service": "~7.0.0",
    "@types/jasmine": "~2.8.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/js-yaml": "^3.11.2",
    "@types/lodash": "^4.14.118",
    "@types/markdown-it": "^0.0.7",
    "@types/node": "~8.9.4",
    "codelyzer": "~4.5.0",
    "css-element-queries": "^1.1.0",
    "husky": "^1.1.3",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "js-yaml": "^3.12.0",
    "karma": "~3.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~1.1.2",
    "karma-jasmine-html-reporter": "^0.2.2",
    "lint-staged": "^8.0.4",
    "lodash.debounce": "^4.0.8",
    "lodash.isequal": "^4.5.0",
    "markdown-it": "^8.4.2",
    "monaco-editor": "^0.15.6",
    "monaco-yaml": "^2.0.0",
    "ng-packagr": "^4.2.0",
    "prettier": "^1.15.1",
    "protractor": "~5.4.0",
    "ts-node": "~7.0.0",
    "tsickle": ">=0.29.0",
    "tslib": "^1.9.0",
    "tslint": "~5.11.0",
    "typescript": "~3.1.1",
    "yaml-js": "^0.2.3"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "semi": true
  },
  "lint-staged": {
    "linters": {
      "*.{json,scss,html}": [
        "prettier --write",
        "git add"
      ],
      "{src,e2e}/**/*.ts": [
        "tslint -p . -t stylish --fix",
        "prettier --write",
        "git add"
      ]
    },
    "ignore": [
      "src/backend/vendor/**/*"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
